<!--        android:layout_marginLeft="50dp"-->
<!--        android:layout_marginBottom="20dp"-->
<!--        android:textSize="18sp"-->
<!--        android:background="#ffff"/>-->

    <TextView
        android:id="@+id/idButtonBuyerCategoryAcity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Farmer"
        android:gravity="center"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:background="#ffff"
        android:textColor="#000000"

        />

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@color/colorWhiteBackground">

            <ImageView
                android:layout_margin="8dp"
                android:id="@+id/idImageVeiwBuyerCategoryActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/businesman"/>

        </LinearLayout>

    <TextView
        android:id="@+id/idButtonBuyerCategoryActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stringButtonBuyerCategoryActivity"
        android:gravity="center"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:background="#ffff"
        android:textColor="#000000"

      />



</LinearLayout>

