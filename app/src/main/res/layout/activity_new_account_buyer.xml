<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteBackground"
    android:orientation="vertical"
    tools:context=".NewAccountBuyerActivity">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="32dp"
            >

            <TextView
                android:id="@+id/idTextViewAreYouCategoryActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create New Account"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="32dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="12dp">

                <ImageView
                    android:id="@+id/idImageViewPersonImageSignUpFarmer"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_person_black_24dp"
                    />

                <EditText
                    android:id="@+id/idEditTextFullNameSignUPBuyer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="Enter Full Name"
                    android:inputType="textCapWords"
                    android:textColor="#000000"
                    android:textColorHint="#B3000000"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="12dp">

                <ImageView
                    android:id="@+id/idImageViewEmailImageSignUpFarmer"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_email_black_24dp"
                    />

                <EditText
                    android:id="@+id/idEditTextEmailSignUpBuyer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="Enter Email"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textColorHint="#B3000000"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="12dp">

                <ImageView
                    android:id="@+id/idImageViewMobileImageSignUpFarmer"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_phone_black_24dp"
                    />

                <EditText
                    android:id="@+id/idEditTextMobileSignUPBuyer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="Enter Mobile Number"
                    android:inputType="phone"
                    android:textColor="#000000"
                    android:textColorHint="#B3000000"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="12dp">

                <ImageView
                    android:id="@+id/idImageViewAddressSignUpFarmer"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_location_on_black_24dp"
                    />

                <EditText
                    android:id="@+id/idEditTextAddressSignUPBuyer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="Enter Address"
                    android:inputType="textPostalAddress"
                    android:textColor="#000000"
                    android:textColorHint="#B3000000"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="12dp">

                <ImageView
                    android:id="@+id/idImageViewPasswordSingUpBuyer"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_lock_black_24dp"
                    />

                <EditText
                    android:id="@+id/idEditTextPasswordSignUPBuyer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="Create Password"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#B3000000"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="48dp"
                >

            <Button
                android:id="@+id/idButtonSubmitBuyer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="#303F9F"
                android:textSize="18sp"
                android:layout_marginBottom="48dp"
                android:background="@color/colorButtonSameForAll"/>

        </LinearLayout>



    </LinearLayout>



</ScrollView>


