<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    android:orientation="vertical"
    tools:context=".HomePageBuyerActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="#ffff"
        android:layout_marginBottom="48dp"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                >

                <GridLayout
                    android:layout_weight="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="5"
                    android:columnCount="2"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    >

                    <!-- Row 1 Column 1-->

                    <androidx.cardview.widget.CardView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="16dp"

                        >
                        <!--                app:cardBackgroundColor="@color/colorOfBackgroundCardView"-->


                        <!--                <FrameLayout-->
                        <!--                    android:background="#FF0000"-->
                        <!--                    android:layout_width="4dp"-->
                        <!--                    android:layout_height="match_parent"/>-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/selector">

                            <LinearLayout
                                android:id="@+id/idLinearLayoutBuyCropsHomePageBuyer"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginTop="24dp"
                                android:layout_marginBottom="24dp"

                                >

                                <ImageView
                                    android:src="@drawable/ic_buycrops"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:text="Buy \nCrops"
                                    android:textColor="#000000"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"/>

                            </LinearLayout>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <!-- Row 1 Column 2-->

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="16dp"
                        app:cardBackgroundColor="@color/colorOfBackgroundCardView"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/selector">

                            <LinearLayout
                                android:id="@+id/idLinearLayoutPostRequirementHomePageBuyer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="24dp"
                                android:layout_marginBottom="24dp"
                                >

                                <ImageView
                                    android:src="@drawable/ic_postrerquirement"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:text="Post \nRequirement"
                                    android:textColor="#000000"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"/>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Row 2 Column 1-->

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="16dp"
                        app:cardBackgroundColor="@color/colorOfBackgroundCardView"
                        >
                        <!--            app:cardBackgroundColor="@color/colorOfBackgroundCardView"-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/selector">

                            <LinearLayout
                                android:id="@+id/idLinearLayoutMakeContractBuyer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="24dp"
                                android:layout_marginBottom="24dp"
                                >

                                <ImageView
                                    android:src="@drawable/ic_makecontract"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:text="Create \nContract"
                                    android:textColor="#000000"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"/>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Row 2 Column 2-->

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="16dp"
                        app:cardBackgroundColor="@color/colorOfBackgroundCardView"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/selector">

                            <LinearLayout
                                android:id="@+id/idLinearLayoutViewHistoryBuyer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="24dp"
                                android:layout_marginBottom="24dp"
                                >

                                <ImageView
                                    android:src="@drawable/ic_historybuyerk"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:text="View \nHistory"
                                    android:textColor="#000000"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"/>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                </GridLayout>

            </LinearLayout>


        </ScrollView>
    </LinearLayout>

</LinearLayout>