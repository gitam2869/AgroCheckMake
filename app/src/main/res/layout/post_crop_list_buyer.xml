<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ffff"
                android:padding="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Crop Name : "
                        android:textSize="18sp"
                        android:paddingLeft="8dp"
                        android:textColor="#BB4621"
                        android:layout_marginBottom="3dp"
                        />

                    <TextView
                        android:layout_weight="9"
                        android:id="@+id/idTextViewPostCropNameBuyer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="PRS User List"
                        android:textSize="20sp"
                        android:paddingLeft="8dp"
                        android:textColor="#FF9100"
                        android:layout_marginBottom="3dp"
                        />

                    <ImageButton
                        android:layout_weight="1"
                        android:id="@+id/idButtonPostCancelButtonBuyer"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:gravity="right"
                        android:background="@null"
                        android:src="@drawable/ic_close_black_24dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#ffff"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crop Details : "
                        android:textSize="18sp"
                        android:paddingLeft="8dp"
                        android:textColor="#BB4621"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="8dp"

                        />
                    <TextView
                        android:id="@+id/idTextViewPostCropQuantityBuyer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRS User List"
                        android:textSize="16sp"
                        android:paddingLeft="20dp"
                        android:textColor="#2b2b2b"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        />

                    <TextView
                        android:id="@+id/idTextViewPostCropRateBuyer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRS User List"
                        android:textSize="16sp"
                        android:paddingLeft="20dp"
                        android:textColor="#2b2b2b"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        />

                    <TextView
                        android:id="@+id/idTextViewPostCropDesriptionBuyer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRS User List"
                        android:textSize="16sp"
                        android:paddingLeft="20dp"
                        android:textColor="#2b2b2b"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        />
                    <TextView
                        android:id="@+id/idTextViewPostCropTimeBuyer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRS User List"
                        android:textSize="16sp"
                        android:paddingLeft="20dp"
                        android:textColor="#2b2b2b"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        />

                    <TextView
                        android:id="@+id/idTextViewPostBuyerNameBuyer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRS User List"
                        android:textSize="16sp"
                        android:paddingLeft="20dp"
                        android:textColor="#2b2b2b"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        />
                    <TextView
                        android:id="@+id/idTextViewPostBuyerNumberBuyer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRS User List"
                        android:textSize="16sp"
                        android:paddingLeft="20dp"
                        android:textColor="#2b2b2b"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="8dp"
                        />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffff"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_weight="1"
                    android:id="@+id/idButtonPostAddToListButtonBuyer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Add to List"
                    android:textColor="#000000"
                    android:backgroundTint="#fbc428"
                    android:textSize="14sp"
                    />

        <!--        <Button-->
        <!--            android:layout_weight="1"-->
        <!--            android:id="@+id/idButtonPostCancelButtonBuyer"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:text="Cancel"-->
        <!--            android:textColor="#000000"-->
        <!--            android:backgroundTint="#fbc428"-->
        <!--            android:textSize="14sp"-->
        <!--&lt;!&ndash;            />&ndash;&gt;-->

        <!--        <Button-->
        <!--            android:layout_weight="1"-->
        <!--            android:id="@+id/idButtonPostAddToListButtonBuyer"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:text="Save to List"-->
        <!--            android:textColor="#000000"-->
        <!--            android:backgroundTint="#fbc428"-->
        <!--            android:textSize="14sp"-->
        <!--            />-->

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>